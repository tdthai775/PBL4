<Window x:Class="Server.UI.ScreenShare"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server.UI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ScreenShare Viewer" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#111827"
        Closing="Window_Closing"
        Loaded="Window_Loaded">

    <Grid>
        <!-- Màn hình stream -->
        <Image x:Name="StreamImage" Stretch="Uniform" Margin="5"/>

        <Border HorizontalAlignment="Right" VerticalAlignment="Top" 
        Margin="20,20,20,0" 
        Background="#CC000000" 
        Padding="15,10" 
        CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="VideoOutline" 
                                 Width="16" Height="16" 
                                 Foreground="#E5E7EB" 
                                 VerticalAlignment="Center" 
                                 Margin="0,0,8,0"/>
                <TextBlock Text="FPS: " 
                   FontSize="13" 
                   Foreground="#E5E7EB" 
                   FontWeight="SemiBold"/>
                <TextBlock x:Name="FpsText" 
                   Text="0" 
                   FontSize="13" 
                   Foreground="#22C55E" 
                   FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Buttons - Góc trên giữa -->
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

            <Button x:Name="ControlButton"
                    Padding="12,6"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    Background="#CC2563EB"
                    Foreground="White"
                    BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="GestureTap" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Điều khiển" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Button x:Name="BackButton"
                    Padding="12,6"
                    Cursor="Hand"
                    Background="#CC9CA3AF"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BackButton_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArrowLeftCircleOutline" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Quay lại" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>